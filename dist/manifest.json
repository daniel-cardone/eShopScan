{
  "name": "eShopScan",
  "description": "Automatically track the in-stock status of products all across the internet.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "/popup/popup.html",
    "default_icon": {
      "16": "/res/icon-16.png",
      "32": "/res/icon-32.png",
      "48": "/res/icon-48.png",
      "128": "/res/icon-128.png"
    }
  },
  "icons": {
    "16": "/res/icon-16.png",
    "32": "/res/icon-32.png",
    "48": "/res/icon-48.png",
    "128": "/res/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["/res/stores.json"],
      "matches": ["<all_urls>"]
    }
  ]
}